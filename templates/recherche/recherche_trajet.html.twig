{% extends'base.html.twig' %}

{% block body %}
    {% for adresse in adresse %}
        {% for etape in adresse.etapes %}
            <div class="card" style="width:300px">
                <img class="card-img-top" src="..." alt="Card image" style="width:100%">
                <div class="card-body">
                    <p class="card-title h6 text-capitalize"><em>{{ etape.trajet.vehicule.membre.prenom }}</em></p>
                    <h5 class="card-text">
                        <p class="h6">De {{ adresse.lieudepart }} Ã  {{ adresse.lieudestination }}</p>
                        <p class="h4">{{ etape.prixetape }} FG
                            <small class="text-muted">- par place</small>
                        </p>
                    </h5>
                    <form action="{{ path('traitement_recherche', {'id' : etape.trajet.id}) }}" method="get">
                        {% if etape.trajet.nbplace > 1 %}
                            <p class="text-center">
                                <button class="btn btn-primary">
                                    {{ etape.trajet.nbplace }}
                                    places restantes
                                </button>
                            </p>
                        {% elseif etape.trajet.nbplace < 1 %}
                            <p class="text-center">{{ etape.trajet.nbplace }} Complet</p>
                        {% else %}
                            <p class="text-center">
                                <button class="btn btn-primary">
                                    {{ etape.trajet.nbplace }}
                                    place restante
                                </button>
                            </p>
                        {% endif %}
                    </form>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

